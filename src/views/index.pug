html
    head
        meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="stylesheet", href="/styles/styles.css")
        <title>SaltyBet DB</title>
    head
    body
        div.d-flex#wrapper
            div#page-content-wrapper
                nav.navbar.navbar-expand-lg.navbar-light.bg-light.border-bottom
                    div.container-fluid
                        strong Salty Database
                        div.navbar-collapse#navbarSupportedContent
                            ul.navbar-nav.ms-auto.mt-2.mt-lg-0
                                form.input-group#search
                                    input.form-control.rounded#searchbox(type="text", placeholder="Search for fighters")
                                    button.btn.btn-outline-primary#submit(type="submit") Search
                div.container-fluid.mx-auto
                    h2.mt-4.mx-auto Current fight
                    if (nodata)
                        p No fight data could be found 
                    else 
                        div.container
                            h1 Tier: #{fightera.tier}
                            ul.list-group
                                    li.list-group-item
                                        div.col-xs-1 
                                            a.page-link(href=`${url}/fighter/?name=${fightera.name}&tier=${fightera.tier}`)
                                                strong(style=" color: #e30e1f") #{fightera.name}
                                        div.col-xs-2(style=" color: #04850f") wins: #{fightera.wins}
                                        div.col-xs-3(style=" color: #e30e1f") losses: #{fightera.losses}
                                        div.col-xs-4 winrate: #{fightera.wins/(fightera.wins+fightera.losses)*100}%
                                    strong VERSUS
                                    li.list-group-item
                                        div.col-xs-1 
                                            a.page-link(href=`${url}/fighter/?name=${fighterb.name}&tier=${fightera.tier}`)
                                                strong(style=" color: #0f0cc2") #{fighterb.name}
                                        div.col-xs-2(style=" color: #04850f") wins: #{fighterb.wins}
                                        div.col-xs-3(style=" color: #e30e1f") losses: #{fighterb.losses}
                                        div.col-xs-4 winrate: #{fighterb.wins/(fighterb.wins+fighterb.losses)*100}%
                        if (pastFights)
                            br
                            div.container
                                h3  Past matchups
                                ul.list-group
                                each fight in pastFights
                                    br
                                    li.list-group-item
                                        div.col-xs-1 
                                            if (fight.data.winner === fightera.name)
                                                div.col-xs-2(style=" color: #e30e1f") #{fightera.name} WON
                                            else
                                                div.col-xs-2(style=" color: #0f0cc2") #{fighterb.name} WON
        footer.footer.bg-light.text-lg-start.text-center.fixed-bottom
            section.d-flex.justify-content-center.justify-content-lg-between.p-4.border-bottom 
                div.me-5.d-none.d-lg-block
                    span This website was made as a little personal project so i could learn typescript.
                div 
                    | Contact and source code:
                    |  
                    a.fab(href="https://github.com/Pedrohme/saltyDbApi") Github
        script(src="/scripts/scripts.js") 

